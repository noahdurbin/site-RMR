<section id="faq"
         class="relative z-20 overflow-hidden pt-20 pb-12 lg:pt-[120px] lg:pb-[90px]"
>
    <div class="container">
        <div class="-mx-4 flex flex-wrap">
            <div class="w-full px-4">
                <div class="mx-auto mb-[60px] max-w-[620px] text-center lg:mb-20">
                    <span class="mb-2 block text-lg font-semibold text-primary">
                        FAQ
                    </span>
                    <h2
                        class="mb-4 text-3xl font-bold text-dark sm:text-4xl md:text-[42px]"
                    >
                        Questions? Answered
                    </h2>
                </div>
            </div>
        </div>

        <div class="-mx-4 flex flex-wrap">
            <% site.data.faq.questions_and_answers.partition.each_with_index { |v, i | i.even? }.each do |column| %>
                <div class="w-full px-4 lg:w-1/2">
                    <% column.each do |q_a| %>
                        <div
                            class="single-faq wow fadeInUp mb-8 w-full rounded-lg border border-[#F3F4FE] bg-white p-5 sm:p-8"
                            data-wow-delay=".1s
                                   "
                        >
                            <button class="faq-btn flex w-full items-center text-left">
                                <div
                                    class="mr-5 flex h-10 w-full max-w-[40px] items-center justify-center rounded-lg bg-dark bg-opacity-5 text-primary"
                                >
                                    <svg
                                        width="17"
                                        height="10"
                                        viewBox="0 0 17 10"
                                        class="icon fill-current"
                                    >
                                        <path
                                            d="M7.28687 8.43257L7.28679 8.43265L7.29496 8.43985C7.62576 8.73124 8.02464 8.86001 8.41472 8.86001C8.83092 8.86001 9.22376 8.69083 9.53447 8.41713L9.53454 8.41721L9.54184 8.41052L15.7631 2.70784L15.7691 2.70231L15.7749 2.69659C16.0981 2.38028 16.1985 1.80579 15.7981 1.41393C15.4803 1.1028 14.9167 1.00854 14.5249 1.38489L8.41472 7.00806L2.29995 1.38063L2.29151 1.37286L2.28271 1.36548C1.93092 1.07036 1.38469 1.06804 1.03129 1.41393L1.01755 1.42738L1.00488 1.44184C0.69687 1.79355 0.695778 2.34549 1.0545 2.69659L1.05999 2.70196L1.06565 2.70717L7.28687 8.43257Z"
                                            fill="#090E34"
                                            stroke="#090E34"
                                        />
                                    </svg>
                                </div>
                                <div class="w-full">
                                    <h4 class="text-base font-semibold text-black sm:text-lg">
                                        <%= q_a.q %>
                                    </h4>
                                </div>
                            </button>
                            <div class="faq-content hidden pl-[62px]">
                                <p class="py-3 text-base leading-relaxed text-body-color">
                                    <%= q_a.a.html_safe %>
                                </p>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>

    <div class="absolute bottom-0 right-0 z-[-1]">
        <svg
            width="1440"
            height="886"
            viewBox="0 0 1440 886"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                opacity="0.5"
                d="M193.307 -273.321L1480.87 1014.24L1121.85 1373.26C1121.85 1373.26 731.745 983.231 478.513 729.927C225.976 477.317 -165.714 85.6993 -165.714 85.6993L193.307 -273.321Z"
                fill="url(#paint0_linear)"
            />
            <defs>
                <linearGradient
                    id="paint0_linear"
                    x1="1308.65"
                    y1="1142.58"
                    x2="602.827"
                    y2="-418.681"
                    gradientUnits="userSpaceOnUse"
                >
                    <stop stop-color="#090E34" stop-opacity="0.36" />
                    <stop offset="1" stop-color="#FDE1E2" stop-opacity="0" />
                    <stop offset="1" stop-color="#FDE1E2" stop-opacity="0.096144" />
                </linearGradient>
            </defs>
        </svg>
    </div>
</section>
